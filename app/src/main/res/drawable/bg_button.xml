<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="0.5dp" android:color="@color/button_border" />
            <solid android:color="@color/button_bg_pressed" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape>
            <stroke android:width="0.5dp" android:color="@color/button_border" />
            <solid android:color="@color/button_bg" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <stroke android:width="0.5dp" android:color="@color/button_border_disabled" />
            <solid android:color="@color/button_bg_disabled" />
            <corners android:radius="5dp" />
        </shape>
    </item>
</selector>